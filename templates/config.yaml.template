server:
  port: 8080
  log_level: info
  public_endpoint: "{{PUBLIC_ENDPOINT}}"

database:
  path: ./data/filehub.db

auth:
  jwt_secret: "{{JWT_SECRET}}"
  jwt_expire_hours: 24
  refresh_expire_days: 7
  admin_username: admin
  admin_password: "{{ADMIN_PASSWORD}}"
  local_key: "{{LOCAL_KEY}}"

upload:
  max_size_mb: 1024

minio:
  endpoint: minio:9000
  access_key: "minioadmin"
  secret_key: "{{MINIO_SECRET_KEY}}"
  bucket: filehub
  use_ssl: false
  region: ""
